---
import heroImage from '@assets/images/hero.png';
import mordor from '@assets/images/mordor.png';

import { Image } from '@astrojs/image/components';
interface Props {
	url?: string;
	alt?: string;
	title?: string;
	tags?: string[];
	children?: HTMLElement | HTMLElement[];
	image?: string;
}

const {
	url = '#',
	alt = 'Project image',
	title = 'Project title',
	tags = ['Tags'],
	image,
} = Astro.props;
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-20 flex w-1/2 flex-col items-center">
		<div data-testid="hero-img" class="flex w-1/2 items-center justify-center">
			<Image
				src={mordor}
				alt=""
				aspectRatio="4:4"
				format="png"
				width={1080}
				height={891}
				loading="eager"
			/>
		</div>
		<div>
			<h1 class="mb-10 font-monospace text-2xl text-black dark:text-white lg:text-5xl">
				Ven√≠ a <span class="text-orange">forjar</span> tu cuerpo en el reino donde la voluntad se <span
					class="text-orange">fortalece</span
				> y la mente se <span class="text-orange">potencia</span>.
			</h1>
		</div>
	</div>
