---
import heroImage from '@assets/images/hero.png';
import mordor from '@assets/images/mordor.png';

import { Image } from '@astrojs/image/components';
interface Props {
	url?: string;
	alt?: string;
	title?: string;
	tags?: string[];
	children?: HTMLElement | HTMLElement[];
	image?:string
}

const { url = '#', alt = 'Project image', title = 'Project title', tags = ['Tags'],image  } = Astro.props;
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>

	
				
	<div class="mb-20 flex flex-col items-center  w-1/2">
		<div data-testid="hero-img" class="flex w-1/2 items-center justify-center" >
			<Image
				src={mordor}
				alt=""
				aspectRatio="1080:891"
				format="png"
				width={300}
				height={300}
				loading="eager"
			/>
		</div>
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
